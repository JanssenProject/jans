                        <!--<configuration>-->
                            <!--<archive>-->
                                <!--<manifest>-->
                                    <!--<mainClass>org.xdi.oxd.ping.Ping</mainClass>-->
                                <!--</manifest>-->
                            <!--</archive>-->
                            <!--<descriptors>-->
                                <!--<descriptor>src/main/assembly/src.xml</descriptor>-->
                            <!--</descriptors>-->
                        <!--</configuration>-->
                    <!--</execution>-->
                </executions>
            </plugin>
        </plugins>
    </build>

