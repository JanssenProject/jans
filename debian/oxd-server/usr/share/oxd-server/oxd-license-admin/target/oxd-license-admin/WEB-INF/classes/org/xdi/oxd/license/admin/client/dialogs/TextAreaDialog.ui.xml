<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:VerticalPanel ui:field="dialogContent" width="400px">
        <g:TextArea ui:field="textArea" width="100%" height="400px"/>
        <g:HorizontalPanel height="50px">
            <g:Button ui:field="okButton">OK</g:Button>
            <g:Button ui:field="closeButton">Close</g:Button>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>