<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:a="urn:import:org.xdi.oxd.license.admin.client.ui"
        >

    <g:DockLayoutPanel ui:field="rootPanel">
        <g:north size='56'>
            <g:HorizontalPanel>
                <g:HTMLPanel>
                    <h2>License Management</h2>
                    <div style="width:100%"></div>
                </g:HTMLPanel>
                <g:Button ui:field="logoutButton">Logout</g:Button>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:TabLayoutPanel barHeight="3" barUnit="EM">
                <g:tab>
                    <g:header size='7'>
                        <b>License Crypt</b>
                    </g:header>
                    <a:LicenseCryptTab ui:field="licenseCryptTab"/>
                </g:tab>
                <g:tab>
                    <g:header size='7'>
                        <b>Customer</b>
                    </g:header>
                    <a:CustomerTab ui:field="customerTab"/>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
